<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="{{ asset('bundles/dhplatform/images/icone_onglet.ico') }}" type="image/x-icon">
    <title>{% block title %}{{ 'Carnet de suivi' | trans }} {% endblock %}</title>


    {% block stylesheets %}
        <link href="{{ asset('bundles/dhplatform/css/general.css', absolute=true) }}" rel="stylesheet">
    {% endblock %}
</head>
{% block body %}

	<div class= center >
		<h1>{{ "Carnet de suivi" | trans }}</h1>
		<h2>{{ "Prénom" | trans }} : {{ firstname }} - {{ "Nom" | trans }}: {{ lastname }}</h2>

		<table border="1">
			<tbody>
			<tr>
				<th>{{ 'Date' | trans }}</th>
				<th>{{ 'Titre' | trans }}</th>
				<th>{{ 'Lieu' | trans }}</th>
				<th>{{ 'Glucides' | trans }}</th>
				<th>{{ 'Glycémie' | trans }}</th>
				<th>{{ 'HbA1c' | trans }}</th>
				<th>{{ 'Activité' | trans }}</th>
				<th>{{ "Type d'activité" | trans }}</th>
				<th>{{ "Insuline rapide" | trans }}</th>
				<th>{{ "Insuline lente" | trans }}</th>
				<th>{{ "Notes" | trans }}</th>
			</tr>
			{% for d in data %}
				<tr>
					<td>{{ d.date }}</td>
					<td>{{ d.title }}</td>
					<td>{{ d.place }}</td>
					<td>{{ d.glucide }}</td>
					<td>{{ d.glycemy }}</td>
					<td>{{ d.hba1c }}</td>
					<td>{{ d.activity }}</td>
					<td>{{ d.activityType }}</td>
					<td>{{ d.fastInsu }}</td>
					<td>{{ d.slowInsu }}</td>
					<td>{{ d.notes }}</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}