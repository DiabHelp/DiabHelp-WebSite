<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="DH\APIBundle\Entity\CommentArticle" table="comment_article">
    <indexes>
      <index name="IDX_F1496C76F675F31B" columns="author_id"/>
      <index name="IDX_F1496C767294869C" columns="article_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="text" type="text" column="text" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="date" type="datetime" column="date" nullable="false"/>
    <many-to-one field="article" target-entity="Article" fetch="LAZY">
      <join-columns>
        <join-column name="article_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="author" target-entity="User" fetch="LAZY">
      <join-columns>
        <join-column name="author_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
